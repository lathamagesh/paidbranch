<?xml version="1.0" encoding="UTF-8"?>
<odoo>
            <record id="view_order_tree_inherit" model="ir.ui.view">
            <field name="name">view_order_tree_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree">
                    <header>
                        <button name="check_button" string="Check" type="object" class="btn-primary" attrs="{'always_visible': True}"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="zoho_id" />
                </xpath>
                <xpath expr="//field[@name='zoho_id']" position="after">
                    <field name="is_zoho"/>
                </xpath>
<!--                <xpath expr="//field[@name='is_zoho']" position="after">-->
<!--                    <field name="company"/>-->
<!--                </xpath>-->
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-success">is_zoho == True</attribute>
                    <attribute name="decoration-it">is_zoho == True</attribute>
                    <attribute name="decoration-primary">is_zoho == False</attribute>
                </xpath>
            </field>
        </record>


</odoo>